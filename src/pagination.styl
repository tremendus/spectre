// Pagination
.pagination {
  display: flex;

  .page-item {
    margin: 10px 1px;

    span {
      display: inline-block;
      padding: 6px 4px;
    }

    a {
      border-radius: $border-radius;
      color: $gray-color-dark;
      display: inline-block;
      padding: 6px 8px;
      text-decoration: none;
      &:focus, 
      &:hover {
        color: $primary-color;
      }
      &[disabled], 
      &.disabled {
        cursor: default;
        opacity: .5;
        pointer-events: none;
      }
    }

    &.active {
      a {
        background: $primary-color;
        color: $light-color;
      }
    }

    &.page-prev, 
    &.page-next {
      flex: 1 0 50%;
    }

    &.page-next {
      text-align: right;
    }

    .page-item-title {
      margin: 0;
    }

    .page-item-subtitle {
      margin: 0;
      opacity: .5;
    }
  }
}
